{
  "name": "turtledesign/translapi",
  "description": "PHP SDK for interfacing with APIs via YAML configuration.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "api",
    "php",
    "yaml",
  ],

  "autoload": {
    "psr-4": {
      "TranslAPI\\": "src/"
    }
  },

  "authors": [
    {
      "name": "Stefan Nesbitt",
      "email": "stefan@turtledesign.com"
    }
  ],

  "require": {
    "php":             ">=5.4.0",
    "symfony/yaml":    ">=2.7",
    "vlucas/valitron": "~1.4",
    "sabre/xml": "^1.5 || ^2.1",
    "guzzlehttp/guzzle": "^7.3"
  },

  "require-dev": {
    "atoum/atoum": "^3.2.0"
  }
}
