{
  "name": "turtledesign/royalmail-php",
  "description": "PHP module for interfacing with the Royal Mail shipping api : http://www.royalmail.com/corporate/services/shipping-api ",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "shipping",
    "postage",
    "royal-mail",
    "post-office",
    "barcodes"
  ],

  "autoload": {
    "psr-4": {
      "RoyalMail\\": "src/"
    }
  },

  "authors": [
    {
      "name": "Stefan Nesbitt",
      "email": "stefan@turtledesign.com"
    }
  ],

  "require": {
    "php":             ">=5.4.0",
    "symfony/yaml":    ">=2.7",
    "vlucas/valitron": "~1.2",
    "sabre/xml": "^2.1"
  },

  "require-dev": {
    "atoum/atoum": "^3.2.0"
  }
}
